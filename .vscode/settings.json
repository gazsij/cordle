{
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.insertSpaces": false,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/CVS": true,
		"**/.DS_Store": true,
		"node_modules/**": true
	},
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    },
    "[typescript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features",
        "editor.formatOnSave": true
    },
    "eslint.validate": [
        "javascript",
        "typescript",
    ]
}
